{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "pretty": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}
